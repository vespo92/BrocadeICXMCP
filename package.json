{
  "name": "brocade-mcp-server",
  "version": "1.0.0",
  "description": "MCP servers for Brocade ICX 6450 switch automation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/servers/stdio.ts",
    "start:stdio": "node dist/servers/stdio.js",
    "start:sse": "node dist/servers/sse.js",
    "test": "jest",
    "lint": "eslint 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "brocade",
    "icx",
    "icx6450",
    "network",
    "automation",
    "ssh",
    "switch-management",
    "typescript"
  ],
  "author": "Vinnie Esposito",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vespo92/BrocadeICXMCP.git"
  },
  "bugs": {
    "url": "https://github.com/vespo92/BrocadeICXMCP/issues"
  },
  "homepage": "https://github.com/vespo92/BrocadeICXMCP#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "ssh2": "^1.17.0",
    "winston": "^3.11.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@types/ssh2": "^1.11.19",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0"
  }
}
