# Brocade Switch Configuration
BROCADE_HOST=192.168.1.1
BROCADE_PORT=22
BROCADE_USERNAME=admin
BROCADE_PASSWORD=your_password_here

# SSH Connection Settings
SSH_TIMEOUT=30000
SSH_KEEPALIVE_INTERVAL=10000
SSH_MAX_RETRIES=3
SSH_RETRY_DELAY=1000

# MCP Server Configuration
MCP_SERVER_NAME=brocade-mcp-server
MCP_SERVER_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=brocade-mcp.log

# SSE Server Configuration (only for SSE mode)
SSE_PORT=3000
SSE_CORS_ORIGIN=*
