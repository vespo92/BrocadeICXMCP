{
  "name": "brocade-mcp-server",
  "version": "1.0.0",
  "description": "MCP servers for Brocade ICX 6450 switch automation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/servers/stdio.ts",
    "start:stdio": "node dist/servers/stdio.js",
    "start:sse": "node dist/servers/sse.js",
    "test": "jest",
    "lint": "eslint 'src/**/*.ts'",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["mcp", "brocade", "icx", "network", "automation"],
  "author": "Vinnie Esposito",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.1",
    "ssh2": "^1.15.0",
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^5.0.3",
    "@types/cors": "^2.8.17",
    "@types/ssh2": "^1.11.19",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}